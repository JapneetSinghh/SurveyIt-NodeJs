<%- include('../includes/head.ejs') %>

    <main>
        <section class="loginPage">
            <div class="loginImage">
                <p>Sign Up</p>
                <p>and come on in</p>
                <br>
                <img src="/img/signUpPage.png" alt="">
                <p class="tinytext">@SurveyIt</p>
            </div>
            <div class="loginForm">
                <div class="topBarLogin">
                    <a href="/">Home</a>
                    <p>Already have an account?
                        <a class="btn1" href="/login">Log In</a>
                    </p>
                </div>
                <section class="centerContainer">
                    <section class="loginFormContainer">
                        <h2>SurveyIt</h2>
                        <p>Get better data with conversational forms, surveys, quizzes & more.</p>
                        <%if(message){%>
                            <div class="errorFlash">
                                <p>
                                    <%= message%>
                                </p>
                            </div>
                            <%}%>

                                <form style="padding-bottom: 50px;" action="/signup" method="Post">
                                    <label for="FirstName">First Name</label>
                                    <input value="<%=firstName%>" name="firstName" type="text" placeholder="John">
                                    <label for="LastName">Last Name</label>
                                    <input value="<%=lastName%>" name="lastName" type="text" placeholder="Smith">
                                    <label for="Email">Email</label>
                                    <input value="<%=email%>" name="email" type="text" placeholder="japneet@gmail.com">
                                    <label for="Password">Password</label>
                                    <input value="<%=password%>" name="password" type="password"
                                        placeholder="At least 6 characters">
                                    <label for="ConfirmPassword">Confirm Password</label>
                                    <input value="<%=confirmPassword%>" type="password" name="confirmPassword"
                                        placeholder="At least 6 characters">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                                    <button type="submit">Create Account</button>
                                </form>
                    </section>
                </section>
            </div>
        </section>
    </main>
    <%- include('../includes/end.ejs') %>