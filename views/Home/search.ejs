<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>
        <main style="min-height: 100vh;">
            <section id="globalSurveys">
                <h1>Surveys shared globally on SurveyIt</h1>
                <div class="searchBar">
                    <form action="/searchSurvey" method="POST">
                        <input value="<%= searchSurvey%>" type="text" placeholder="Enter survey details"
                            name="searchSurvey" id="">
                        <button type="submit" class="btn2">
                            <i class="bi bi-search"></i>
                        </button>
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    </form>
                </div>
                <br>
                <%if(surveys.length){%>
                    <h1 style="font-size: 24px;">
                        <%if(surveys.length===1){%>
                            1 matching result for <span style="color: blue;">
                                <%= searchSurvey%>
                            </span>
                            <%}else{%>
                                <%= surveys.length%> matching results for <span style="color: blue;">
                                        <%= searchSurvey%>
                                    </span>
                                    <%}%>
                    </h1>
                    <% surveys.reverse().forEach(survey=>{ %>
                        <article>
                            <br>
                            <div class="globalSurveyImage">
                                <img src="<%= survey.thumbnailImage%>" alt="">
                            </div>
                            <div class="globalSurveyData">
                                <p style="margin: 0;">Survey Owner : <%= survey.author%>
                                        <h2>
                                            <%= survey.surveyName %>
                                        </h2>
                                        <p>
                                            <%= survey.description%>
                                        </p>
                                        <div class="grids-data">
                                            <div>
                                                <p class="survey-card-type">Status: </p>
                                                <p class="survey-card-general">
                                                    <% if(survey.acceptingResponses==='Yes' ){%> Active <div
                                                            class="status-active">
                                                        </div>
                                                        <%}else{%> Closed <div class="status-inactive"></div>
                                                            <%}%>
                                                </p>
                                            </div>
                                            <div>
                                                <p class="survey-card-type">Responses: </p>
                                                <p class="survey-card-general">
                                                    <%= survey.numOfResponses%>
                                                </p>
                                            </div>
                                            <div>
                                                <p class="survey-card-type">Date Created: </p>
                                                <p class="survey-card-general">
                                                    <%= survey.dateCreated%>
                                                </p>
                                            </div>
                                            <div>
                                                <p class="survey-card-type">Last Updated: </p>
                                                <p class="survey-card-general">
                                                    <%= survey.lastUpdated%>
                                                </p>
                                            </div>

                                        </div>
                                        <div style="width: 115px;">
                                            <a style="text-align: center;" class="btn2"
                                                href="/getSurvey/<%= survey.surveyName%>/<%= survey.surveyId%>"> Start
                                                Survey</a>
                                        </div>
                            </div>
                        </article>
                        <% })%>
                            <%}else{%>
                                <h1 style="font-size: 24px;">No matching results for <span style="color: blue;">
                                        <%= searchSurvey%>
                                    </span>
                                </h1>
                                <%}%>

            </section>


        </main>
        <%- include('../includes/end.ejs') %>